<div id="posts-container">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-header">
        <div class="post-user">
          <%# condition to check if user exists %>
          <%= link_to post.user do %>
            <%= post.user.name %>
          <% end %>
          <%# end %>
        </div>
        <div class="post-date">
          <%= post.created_at %>
        </div>
      </div>
      <div class="post-body">
        <%= post.body %>
      </div>
      <div class="likes-dislikes">
        <div class="likes">
          <%= post.likes.length %>
        </div>
        <div class="dislikes">
          <%= post.dislikes.length %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%== pagy_nav(@pagy) %>
