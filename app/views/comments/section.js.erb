var commentSection = document.querySelector(
  `[data-comment-section-id="<%= @post_id %>"]`);

var comments = commentSection.querySelectorAll('.comment-chain');

if (comments.length === 1) {
  let firstComment = comments[0];
  firstComment.querySelector('.show-replies').remove()
  firstComment.querySelector('.replies-container').style.display = '';
  commentSection.querySelector('a').remove()
  commentSection.insertAdjacentHTML('afterbegin', '<%= j render ("section") %>')
}
